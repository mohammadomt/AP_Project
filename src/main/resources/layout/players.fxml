<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.StackPane?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="graphics.gui.PlayersController" stylesheets="@players.css"
      alignment="CENTER">
    <ListView fx:id="listView" VBox.vgrow="ALWAYS" styleClass="list-cell-player"/>
    <StackPane prefWidth="Infinity">
        <ButtonBar fx:id="btnBar">
            <buttons>
                <Button text="Attack" onAction="#btnAttack_Click"/>
            </buttons>
        </ButtonBar>
        <Button text="Refresh" onAction="#btnRefresh_Click"/>
    </StackPane>
</VBox>
