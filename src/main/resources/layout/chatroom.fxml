<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="400.0" prefWidth="600.0" fx:controller="graphics.gui.ChatroomController">
    <ListView fx:id="chatLists" prefWidth="600.0" prefHeight="400.0"
              VBox.vgrow="ALWAYS"/>
    <HBox fx:id="hbox"
          prefWidth="600">
        <TextField fx:id="txtMessage"
                   HBox.hgrow="ALWAYS"/>
        <Button text="Send" onAction="#btnSend_Click"/>
    </HBox>
</VBox>

