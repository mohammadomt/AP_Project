<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="900.0" prefWidth="1200.0" fx:controller="graphics.gui.ChatroomController">

    <VBox fx:id="vbox" alignment="CENTER">
        <children>
            <ListView fx:id="chatLists" prefWidth="1000.0" prefHeight="800.0"/>
            <HBox fx:id="hbox">
                <TextField fx:id="messageField"/>
                <Button fx:id="sendBtn" text="Send" onAction="#handleSendButtonCLicked"/>
            </HBox>
        </children>
    </VBox>
</AnchorPane>

